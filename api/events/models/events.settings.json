{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "events"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "familyName": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "time": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "events"
    }
  }
}
